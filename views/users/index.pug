extends ../layouts/common.pug

block content
  h1= 'Hello ' + user.name
    a.btn.btn-primary(href="/users/create") New

  .d-flex.align-items-center
    form.ml-auto(action="/users/search", method="get", class="d-flex")
      input(type="text", name="q", value=q, class="form-control")
      button(class="btn btn-primary ml-2") Search
  
  table.table
    tr
      th Avatar
      th Name
      th Email
      th Actions
    each user in users
      tr
        td
          img(src= user.avatar, width='32')
        td= user.name
        td= user.Email
        td
          a.btn.btn-light(href="/users/" + user.id) View