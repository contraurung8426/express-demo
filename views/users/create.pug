extends ../layouts/common.pug

block content
  h1 Create user
  if errors
    each error in errors
      .alert.alert-danger= error
  form(action="/users/create", method="post", enctype="multipart/form-data")
    .form-group
      label(for="name") Name
      input#name.form-control(type='text', name='name', placeholder='Enter Name', value= values ? values.name : "")

    .form-group
      label(for="email") Email address
      input#email.form-control(type='email', name='email', placeholder='Enter email', value= values ? values.name : "")

    .form-group
      label(for="avatar") Avatar
      input#avatar.form-control-file(name="avatar", type="file")

    button.btn.btn-primary Create