extends ../layouts/common.pug

block content
    .log-form
    h2 Login to your account
    if errors
        each error in errors
            .alert.alert-danger= error
    form(method='POST' action='/auth/login')
        input(type='text', name='email', title='Email', placeholder='Email', value=values ? values.email:'')
        input(type='password',name= 'password', title='username', placeholder='password')
        button.btn(type='submit') Login
        a.forgot(href='#') Forgot Username?
    // end log form
